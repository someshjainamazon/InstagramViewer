<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/tvUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvString"
        android:maxLines="3"
        android:ellipsize="end"
        android:id="@+id/tvPhoto"
        android:textStyle="italic"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvLikes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvUser"
        android:id="@+id/tvUser"
        android:paddingLeft="20sp"
        android:drawablePadding="8dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="@android:color/holo_purple"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_toEndOf="@+id/ivProfile" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivProfile"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvTime"
        android:id="@+id/tvTime"
        android:textColor="@android:color/holo_purple"
        android:layout_above="@+id/ivPhoto"
        android:paddingRight="5sp"
        android:layout_alignRight="@+id/tvLikes"
        android:layout_alignEnd="@+id/tvLikes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_likes"
        android:id="@+id/tvLikes"
        android:gravity="left"
        android:paddingLeft="3.0sp"
        android:textStyle="bold"
        android:textColor="@color/material_blue_grey_800"
        android:layout_toRightOf="@+id/ivLike"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivLike"
        android:src="@drawable/like_icon"
        android:adjustViewBounds="true"
        android:maxWidth="20dp"
        android:maxHeight="20dp"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments :-"
        android:textColor="@color/material_blue_grey_800"
        android:textStyle="bold"
        android:id="@+id/tvComment"
        android:layout_below="@+id/tvPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCommentVal"
        android:textStyle="italic"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvComment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>